---
import CheckBox from "../components/CheckBox.astro";
const { id } = Astro.props
---

<section class="section" id={id}>
  <table class="section__table">
    <tr class="tr__header">
      <th class="hr__header">NUMBER</th>
      <th class="hr__header">DO WHAT?</th>
      <th class="hr__header">DATE REALICE</th>
      <th class="hr__header">CHECK</th>
    </tr>
    <tr class="tr__data">
      <td class="td__data">1</td>
      <td class="td__data">Run marathon</td>
      <td class="td__data">01/11/11</td>
      <td class="td__data">
        <CheckBox />
      </td>
    </tr>
  </table>
</section>

<style>
/* Estilos generales de la tabla */
.section__table {
  width: 100%;
  border-collapse: collapse;
  font-family: 'Arial', sans-serif;
  margin: 20px 0;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
  border-radius: 8px;
  overflow: hidden;
}

/* Estilos para la cabecera de la tabla */
.tr__header {
  background-color: #4CAF50;
  color: white;
  text-align: left;
}

.hr__header {
  padding: 15px;
  text-transform: uppercase;
  font-size: 14px;
  font-weight: bold;
  border-bottom: 2px solid #ddd;
}

/* Estilos para las filas de datos */
.tr__data:nth-child(even) {
  background-color: #f2f2f2;
}

.tr__data:hover {
  background-color: #ddd;
}

.td__data {
  padding: 12px;
  border-bottom: 1px solid #ddd;
}

/* Estilos para los checkbox */
input[type="checkbox"] {
  transform: scale(1.5);
  cursor: pointer;
}

/* Ajustes para dispositivos m√≥viles */
@media (max-width: 600px) {
  .section__table {
    font-size: 12px;
  }
  
  .hr__header, .td__data {
    padding: 10px;
  }
}


</style>