---
interface Props {
	title: string;
}
const { title } = Astro.props;

import '@fontsource-variable/grandstander';
import '@fontsource-variable/rubik';
import "../style/reset.css"
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="List of 100 things going to do" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="author" content="malsebasmal">
		<meta name="description" content="Web of list i will to do">
		<meta name="keywords" content="100 list, 100, list, do it, just do it, web list">
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	html {
		background-image: linear-gradient(
      transparent 50px,
      transparent 52px
    ),
    linear-gradient(#e1e1e1 0.1em, transparent 0.1em);
		background-size: 100% 25px;
	}
	body {
		width: 100%;
		height: auto;

		display: flex;
		justify-content: center;
	}
</style>
